<div class="col mb-5">
  <div class="card h-100">
    <!-- Product image-->
    <img
      class="card-img-top"
      width="450"
      height="300"
      src="{{this.image}}"
      alt="{{this.name}}"
    />

    <!-- Product details-->
    <div class="card-body p-4">
      <div class="text-center">
        <!-- Product name-->
        <h5 class="fw-bolder">{{this.name}}</h5>
        <!-- Product reviews-->
        <div class="d-flex justify-content-center small text-warning mb-2">
          <div class="bi-star-fill"></div>
          <div class="bi-star-fill"></div>
          <div class="bi-star-fill"></div>
          <div class="bi-star-fill"></div>
          <div class="bi-star-fill"></div>
        </div>
        <!-- Product price-->
        {{this.price}}
      </div>
    </div>

    <!-- Product actions-->
    <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
      <div class="text-center">
        <button
          class="btn btn-outline-dark mt-auto add-to-cart-btn"
          data-id="{{this.id}}"
          data-title="{{this.name}}"
          data-price="{{this.price}}"
        >
          Add to cart
        </button>

      </div>
    </div>
  </div>
</div>